zos-academy.fr {

    @labs path /labs*

    handle @labs {
        forward_auth auth:8081 {
            uri /api/verify
            copy_headers Set-Cookie

            @unauth401 {
                status 401
            }
            handle_response @unauth401 {
                redir * /
            }
        }

        uri strip_prefix /labs
        reverse_proxy navigateur:80
    }

    handle {
        reverse_proxy auth:8081
    }

    encode gzip
}

www.zos-academy.fr {
    redir https://zos-academy.fr{uri} permanent
}
